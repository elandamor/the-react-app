{
  "name": "the-react-components",
  "version": "0.0.1",
  "description": "Components used by the-react-app",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "tsc --noEmit --skipLibCheck && yarn format && rm -rf dist && rollup -c",
    "format": "yarn prettier -- --write",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "precommit": "yarn format",
    "prepublishOnly": "yarn build",
    "prettier": "prettier \"**/*.+(js|jsx|json|css|scss|ts|tsx)\"",
    "start": "rollup -c -w",
    "test": "echo \"Error: no test specified\"",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "validate": "yarn lint && prettier -- --list-different"
  },
  "author": "elandamor",
  "license": "MIT",
  "peerDependencies": {
    "classnames": ">= 2.2.6",
    "formik": ">= 2.0.6",
    "react": ">= 16.12.0",
    "react-dom": ">= 16.12.0",
    "react-feather": ">= 2.0.3",
    "react-spring": ">= 8.0.27",
    "react-router-dom": ">= 5.1.2",
    "styled-components": ">= 4.4.1",
    "the-theme": "^0.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "babel-plugin-styled-components": "^1.10.6",
    "classnames": "^2.2.6",
    "formik": "^2.0.6",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-feather": "^2.0.3",
    "react-spring": "^8.0.27",
    "react-router-dom": "^5.1.2",
    "rollup": "^1.27.5",
    "rollup-plugin-babel-minify": "^9.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript2": "^0.25.2",
    "styled-components": "^4.4.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.1.0",
    "tslint-react-hooks": "^2.2.1"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,jsx,json,css}": [
      "yarn format",
      "git add"
    ]
  }
}
